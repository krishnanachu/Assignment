<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DynamicUIControls.View.Controls.DropdownView">
  <ContentView.Content>
      <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding Discription}" TextColor="#313233" FontSize="17" FontFamily="Muli"/>
            </StackLayout>

            <Picker x:Name="picker"
                        Title="Select a Parameter"
                        TitleColor="LightGray"
                       >
                <Picker.Items>
                    <x:String>sample item1</x:String>
                    <x:String>sample item2</x:String>
                    <x:String>sample item3</x:String>
                    
                </Picker.Items>
            </Picker>
        </StackLayout>
  </ContentView.Content>
</ContentView>
